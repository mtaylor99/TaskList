@model StatusesListViewModel

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Statuses";
}

<div class="TL-Main">
    <div class="TL-Header">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success mt-1">@TempData["message"]</div>
        }
        <h2>Statuses</h2>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    </div>
    <div class="TL-Content">
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>
            </thead>
            @foreach (Status status in Model.Statuses)
            {
                <tr>
                    <td>@status.StatusId</td>
                    <td>@status.Name</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@status.StatusId" method="post">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@status.StatusId">Edit</a>
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="TL-Footer">
        <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true"
             page-class="btn" page-class-normal="btn-secondary"
             page-class-selected="btn-primary" class="btn-group pull-right m-1">
        </div>
    </div>
</div>