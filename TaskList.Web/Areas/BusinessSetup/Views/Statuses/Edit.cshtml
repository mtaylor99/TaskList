@model TaskList.DAL.Models.Status

@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Edit Status";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <div class="TL-Main">
        <div class="TL-Header">
            <h2>Edit Status</h2>
        </div>
        <div class="TL-Content">
            <input type="hidden" asp-for="StatusId" />
            @Html.Partial("_StatusCreateEditPartial", Model)
        </div>
        <div class="TL-Footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>



